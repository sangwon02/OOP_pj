<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light"
    tools:ignore="ExtraText">

    <!-- 날짜 표시 -->

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:text="10월 21일 월요일"
        android:textSize="20sp" />

    <!-- 친구 프로필 사진 및 추가 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/friendProfile1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="친구 프로필"
            android:foreground="@drawable/ic_launcher_foreground"
            android:foregroundTint="#000000" />

        <Button
            android:id="@+id/btnfriendadd"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:backgroundTint="#000000"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            app:strokeColor="#717171"
            app:strokeWidth="1sp" />
    </LinearLayout>

    <!-- 카테고리 및 할 일 리스트 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"

        app:cardElevation="10dp"
        app:cardBackgroundColor="#E9E9E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/categoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="카테고리1"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnlistadd"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="188dp"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#000000"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/categoryTitle"
                    app:strokeColor="#000000"
                    app:strokeWidth="2sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/taskCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/taskEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="할 일을 입력하세요" />
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btncategoryadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="24sp" />
</LinearLayout>
